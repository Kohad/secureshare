<h2>My Files</h2>
<%= link_to "Upload New File", new_file_upload_path %>

<ul>
  <% @files.each do |file| %>
    <li>
      <strong><%= file.title %></strong><br>
      <%= file.description %><br>
      <% if file.file.attached? %>
        <%= link_to "Download", rails_blob_path(file.file, disposition: "attachment") %>
      <% end %>
      <%= link_to "Delete", file_upload_path(file), method: :delete, data: { confirm: "Are you sure?" } %>
      <% if file.public? %>
        | Public URL: <%= public_file_url(file.slug) %>
      <% end %>
    </li>
  <% end %>
</ul>
<%= link_to "Back to Dashboard", authenticated_root_path %>