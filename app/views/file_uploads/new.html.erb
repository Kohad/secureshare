<h2>Upload New File</h2>

<%= form_with model: @file_upload, local: true do |f| %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </p>

  <p>
    <%= f.label :file %><br>
    <%= f.file_field :file %>
  </p>

  <p>
    <%= f.label :public, "Make public?" %>
    <%= f.check_box :public %>
  </p>

  <p><%= f.submit "Upload" %></p>
<% end %>
<%= link_to "Back to My Files", file_uploads_path %>
<%= link_to "Back to Dashboard", authenticated_root_path %>